{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "kubernetes": {
    "fileMatch": [
      "\\.yaml$"
    ]
  },
  "argocd": {
    "fileMatch": [
      "apps/templates/.+\\.yaml$"
    ]
  },
  "customManagers": [
    {
      "customType": "jsonata",
      "managerFilePatterns": ["/catalog.yaml$/"],
      "matchStrings": [
        "($latest := $single(spec.images, function($v) { $v.major = $max(spec.images.major) }).image; $parts := $split($latest, ':'); { 'depName': $parts[0], 'currentValue': $parts[1] })"
      ],
      "autoReplaceStringTemplate": "- major: {{{newMajor}}}image: {{{depName}}}:{{{newValue}}}",
      "datasourceTemplate": "docker",
      "fileFormat": "yaml"
    }
  ],
  "packageRules": [
    {
      "matchDatasources": ["docker"],
      "matchPackageNames": ["clamav/clamav"],
      "versioning": "regex:^(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)?_(?<compatibility>.*)?$"
    },
    {
      "matchPackageNames": ["quay.io/ceph/ceph"],
      "allowedVersions": "/^v[0-9]+\\.[2-9]+\\.[0-9]+(\\.[0-9]+)?$/"
    },
    {
      "matchPackageNames": ["ghcr.io/cloudnative-pg/postgresql"],
      "matchUpdateTypes": ["major"],
      "matchManagers": ["kubernetes"],
      "enabled": false
    },
    {
      "matchUpdateTypes": ["patch"],
      "matchCurrentVersion": "!/^0/",
      "automerge": true,
      "automergeType": "branch"
    }
  ]
}
